<div class='jumbotron'>
  <table class='table table-hover'>
    <thead>
      <td><b>Name</b></td>
      <td><b>Best Team</b></td>
      <td><b>Wins</b></td>
      <td><b>Losses</b></td>
      <td><b>Goals</b></td>
      <td><b>Answer Factor</b></td>
      <td><b>Win %</b></td>
    </thead>
    <% @ranked_players.each do |player| %>
      <tr>
        <td><%= player.name %></td>
        <td>
          <% if player.best_team.nil? %>
            Player has not won any games
          <% else %>
            <%= player.best_team %>
          <% end %>
        </td>
        <td><%= player.games_won.length %></td>
        <td><%= player.games_lost.length %></td>
        <td><%= player.goals %></td>
        <td><%= player.answer_factor %></td>
        <td><%= player.win_percent %></td>
      </tr>
    <% end %>
  </table>
</div>