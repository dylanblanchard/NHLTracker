<div class='row'>
  <div class='col-md-5'>
    <div class='team-icon'>
      <img src='/<%= team_gif_link(@game.away_team) %>.gif' />
    </div>
    <h1 class='text-center'><%= @game.away_team %></h1>
    <h2 class='text-center'><%= @game.away_player.name %></h2>
    <h1 class='text-center'><%= @game.away_player_score %></h1>
  </div>
  <div class='col-md-2'>
    <h1 class='text-center'>vs.</h1>
  </div>
  <div class='col-md-5'>
    <div class='team-icon'>
      <img src='/<%= team_gif_link(@game.home_team) %>.gif' />
    </div>
    <h1 class='text-center'><%= @game.home_team %></h1>
    <h2 class='text-center'><%= @game.home_player.name %></h2>
    <h1 class='text-center'><%= @game.home_player_score %></h1>
  </div>
</div>